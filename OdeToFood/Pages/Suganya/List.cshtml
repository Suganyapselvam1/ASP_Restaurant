@page
@model OdeToFood.Pages.Suganya.ListModel
@{
}
<h1>Restaurants</h1>
<form method="get">
    <div>
        <div>
            <input type="search" asp-for="SearchTerm"/>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>
<table class="table">
    @foreach (var item in Model.Restaurants)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Location</td>
        <td>@item.CusineType</td>
        <td>
            <a asp-page="./Detail" asp-route-restaurantId="@item.Id">
                Click This
            </a>
        </td>
        <td>
            <a asp-page="./Edit" asp-route-restaurantId="@item.Id">
                Edit This
            </a>
        </td>
    </tr>
    }

</table>
<a asp-page="./Edit" class="btn btn-primary">Add New</a>
<div>
    @Model.Message
</div>